.scheme{
  transition: all 0.2s ease;
  width: 200px;
  &:hover{
    transform: scale(1.05);
  }
  .mat-slide-toggle{
    background: #252a32;
    height: auto;
    width: 100%;
    border-radius: 75px;
    color: #fff;
    padding: 15px 25px;
    display: block;
    align-items: center;
    vertical-align: middle;
    font-size: 1.08rem;
    transition: all 0.2s ease;
    &:hover{
      background-color: #0f1115;
      box-shadow: 0 0px 20px 0 rgba(0, 0, 0, 1);
    }

  }
  .mat-checked{
    box-shadow: 0 2px 10px 0 rgb(12, 16, 23);
    background-color: #dbdbdb;
    &:hover{
      background-color: #fff;
      box-shadow: 0 0px 15px 0 rgba(255,255,255,0.8);
    }

  }
}


/* переключатель темы off */
::ng-deep .mat-slide-toggle{
  .mat-slide-toggle-label{
    margin: 0;
    padding: 0;
    .mat-slide-toggle-bar{
      /* полосочка влючения */
      background-color: rgba(255, 255, 255, 0.2);
      width: 37px;
      height: 20px;
      border-radius: 50px;
      .mat-slide-toggle-thumb-container{
        /* кружочек */
        background-color: #fff;
        width: 14px;
        height: 14px;
        border-radius: 50%;
        box-shadow: 0 2px 1px -1px rgba(0,0,0,.2), 0 1px 1px 0 rgba(0,0,0,.14), 0 1px 3px 0 rgba(0,0,0,.12);
        top: 3px;
        left: 3px;
        .mat-slide-toggle-thumb{
          background-color: #fff;
          width: 14px;
          height: 14px;
        }
      }
    }
    .mat-slide-toggle-content{}
  }
}
/* переключатель темы on */
::ng-deep .mat-checked{
  .mat-slide-toggle-label{
    .mat-slide-toggle-bar{
      /* полосочка влючения */
      background-color: rgba(0,0,0, 0.2) !important;
      .mat-slide-toggle-thumb-container{
        /* кружочек */
        background: #047bf8;
        .mat-slide-toggle-thumb{
          /* кружочек */
          background: #047bf8;
        }
      }
    }
    .mat-slide-toggle-content{
      color: #000;
    }
  }
}


